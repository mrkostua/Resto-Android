<resources>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Empty">
        <item name="android:layout_width">@dimen/empty</item>
        <item name="android:layout_height">@dimen/empty</item>
    </style>

    <style name="EmptyWrap">
        <item name="android:layout_width">@dimen/empty</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap" parent="Match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch" parent="Wrap">
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Guideline-->
    <style name="GuidelineVertical"
           parent="MatchWrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuidelineHorizontal"
           parent="WrapMatch">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
